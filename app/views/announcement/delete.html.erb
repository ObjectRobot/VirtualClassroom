<h1>Delete <%= @announcement.title %></h1>
<form action="/announcement/ <%= @announcement.id %>" method="post">
	<input type="hidden" name="_method" value="delete">
	<div>
		<label>Title:</label>
		<input type="text" name="announcement[title]" value="<%= @announcement.title%>" disabled class="form-control">
	</div>
	<div>
		<label>Body:</label>
	<textarea cols= "50" rows= "20" input name="announcement[body]" disabled class="form-control"><%= @announcement.body%></textarea>
	</div>
	<input type="submit" value= "Delete" class="btn btn-primary">
</form>