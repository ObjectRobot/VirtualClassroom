<h1>Edit <%= @webfile.title %></h1>
<div>
	<%= image_tag @webfile.image %>
</div>
<form action="/webfile/ <%= @webfile.id %>" method="post" enctype="multipart/form-data">
	<div>
		<label>Title:</label>
		<input type="text" name="webfile[title]" value="<%= @webfile.title%>" class="form-control">
	</div>
	<div class="form-group">
		<label>Image:</label>
		<input type="file" name="webfile[image]" class="form-control">
	</div>
	<input type="submit" value= "Update" class="btn btn-primary">
</form>
<% if flash[:errors] %>
	<% flash[:errors].each do |e| %>
	<div class="alert alert-danger"><%= e %></div>
	<% end %>
<% end %>