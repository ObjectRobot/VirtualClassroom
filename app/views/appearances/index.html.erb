<h1>Create Appearance</h1>
<form action="/appearances" method="post">
	<div>
		<label>Announcement:</label>
		<select name="announcement[announcement_id]">
			<option></option>
			<% @annoncement.each do |announcement| %>
			<option value="<%= announcement.id %>"><%= announcement.title %> <%= announcement.body %></option>	
			<% end %>
		</select>
	</div>
	<div>
		<label>Weblink:</label>
		<select name="weblink[weblink_id]">
			<option></option>
			<% @weblink.each do |weblink| %>
			<option value="<%= weblink.id %>"><%= weblink.title %> <%= weblink.body %></option>	
			<% end %>
		</select>
	</div>
	<div>
		<label>Webfile:</label>
		<select name="webfile[webfile_id]">
			<option></option>
			<% @webfile.each do |webfile| %>
			<option value="<%= webfile.id %>"><%= webfile.title %> <%= webfile.download %></option>	
			<% end %>
		</select>
	</div>
	<input type="submit" value="Create">
</form>
<% if flash[:errors] %>
	<% flash[:errors].each do |e| %>
	<div><%= e %></div>
	<% end %>
<% end %>